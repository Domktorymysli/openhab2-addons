			</parameter>
			<parameter name="dinName6" type="text" required="true">
				<label>digitalIn6</label>
				<description>din6</description>
			</parameter>
			<parameter name="dinName7" type="text" required="true">
				<label>digitalIn7</label>
				<description>din7</description>
			</parameter>
			<parameter name="dinName8" type="text" required="true">
